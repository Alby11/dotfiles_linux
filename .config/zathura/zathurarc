# vim: ft=zathurarc

map j scroll down
map k scroll up
map h scroll left
map l scroll right
map n search forward
map N search backward
map : focus_inputbar ":open "
# A limitation in zathura prevents a proper remapping of O
map : focus_inputbar ":open "
map > navigate next
map < navigate previous
map gg scroll page-top
map G scroll page-bottom
map M toggle_fullscreen

map [index] j navigate_index down
map [index] k navigate_index up
map [index] h navigate_index collapse
map [index] l navigate_index expand
map [index] H navigate_index collapse-all
map [index] L navigate_index expand-all
map [index] s navigate_index select

# Copy bindings to other modes:
map [index] n search forward
map [index] N search backward
map [index] : focus_inputbar ":open "
map [index] : focus_inputbar ":open "
map [index] > navigate next
map [index] < navigate previous
map [fullscreen] j scroll down
map [fullscreen] k scroll up
map [fullscreen] h scroll left
map [fullscreen] l scroll right
map [fullscreen] n search forward
map [fullscreen] N search backward
map [fullscreen] : focus_inputbar ":open "
map [fullscreen] : focus_inputbar ":open "
map [fullscreen] > navigate next
map [fullscreen] < navigate previous
map [fullscreen] gg scroll page-top
map [fullscreen] G scroll page-bottom
map [fullscreen] M toggle_fullscreen
map [presentation] j scroll down
map [presentation] k scroll up
map [presentation] h scroll left
map [presentation] l scroll right
map [presentation] n search forward
map [presentation] N search backward
map [presentation] : focus_inputbar ":open "
map [presentation] : focus_inputbar ":open "
map [presentation] > navigate next
map [presentation] < navigate previous
map [presentation] gg scroll page-top
map [presentation] G scroll page-bottom

# GUI settings
set guioptions ""

# Render settings
set render-loading "true"

# Toggle recolor dynamically
map r set recolor !recolor

# Clipboard settings
set selection-clipboard clipboard
set window-title-page true

# Colors
set default-fg                rgba(202,211,245,1)
set default-bg                rgba(36,39,58,1)

set completion-bg             rgba(54,58,79,1)
set completion-fg             rgba(202,211,245,1)
set completion-highlight-bg   rgba(87,82,104,1)
set completion-highlight-fg   rgba(202,211,245,1)
set completion-group-bg       rgba(54,58,79,1)
set completion-group-fg       rgba(138,173,244,1)

set statusbar-fg              rgba(202,211,245,1)
set statusbar-bg              rgba(54,58,79,1)

set notification-bg           rgba(54,58,79,1)
set notification-fg           rgba(202,211,245,1)
set notification-error-bg     rgba(54,58,79,1)
set notification-error-fg     rgba(237,135,150,1)
set notification-warning-bg   rgba(54,58,79,1)
set notification-warning-fg   rgba(250,227,176,1)

set inputbar-fg               rgba(202,211,245,1)
set inputbar-bg               rgba(54,58,79,1)

# Recolor settings
set recolor                   "true"
set recolor-lightcolor        rgba(36,39,58,1)
set recolor-darkcolor         rgba(202,211,245,1)
set recolor-reverse-video     "true"
set recolor-keephue           "true"

# Index settings
set index-fg                  rgba(202,211,245,1)
set index-bg                  rgba(36,39,58,1)
set index-active-fg           rgba(202,211,245,1)
set index-active-bg           rgba(54,58,79,1)

# Render loading colors
set render-loading-bg         rgba(36,39,58,1)
set render-loading-fg         rgba(202,211,245,1)

# Highlight settings
set highlight-color           rgba(87,82,104,0.5)
set highlight-fg              rgba(245,189,230,0.5)
set highlight-active-color    rgba(245,189,230,0.5)
